<form class="elan">
  <section>
  <h3>{{elanData.name}} - Available Gifts</h3>
    <div class="gifts-grid">
      {{#each elanData.gifts}}
        <div class="gift-entry">
          <h4>{{this.name}}</h4>
          <p>{{this.description}}</p>
          <p><strong>Cost:</strong> {{this.elanCost}}</p>
          <p><strong>Requirements:</strong> Elan {{this.elanRequirements}}</p>

          <button 
            type="button" 
            class="buy-gift" 
            data-gift="{{@index}}"
          >
            Buy
          </button>
        </div>
      {{/each}}
    </div>
  </section>

  <section>
    <h3>Purchased Gifts</h3>

    {{#if elanData.purchasedGifts.length}}
      <div class="gifts-grid">
        {{#each elanData.purchasedGifts}}
          <div class="gift-entry purchased">
            <h4>{{this.name}}</h4>
            <p>{{this.description}}</p>
            <p><strong>Cost:</strong> {{this.elanCost}}</p>

            <button 
              type="button" 
              class="remove-gift" 
              data-index="{{@index}}"
            >
              Remove
            </button>
          </div>
        {{/each}}
      </div>
    {{else}}
      <p>No gifts purchased yet.</p>
    {{/if}}
  </section>
</form>