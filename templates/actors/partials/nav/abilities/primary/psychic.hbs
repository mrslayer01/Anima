<h3>
  Psychic DP Limit:
  {{actor.system.abilities.primary.abilityLimits.Psychic.current}}
  /
  {{actor.system.abilities.primary.abilityLimits.Psychic.final}}
</h3>
<div class="secondary-block">
  <table class="ability-table">
    <thead>
      <tr>
        <th class="ability-table-name">
          Ability
        </th>
        <th>
          Base
        </th>
        <th>
          Bonus
        </th>
        <th>
          Class
        </th>
        <th>
          Final
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each actor.system.abilities.primary.Psychic as |ability key|}}
        <tr>
          <td>
            {{localize (concat "ABF.Ability." key)}}
          </td>
          <td>
            <input
              class="mod-input-resize-char primary-input"
              data-name="{{key}}"
              data-cost="{{ability.cost}}"
              type="number"
              value="{{ability.base}}"
              name="system.abilities.primary.Psychic.{{key}}.base"
              {{#if actor.system.lockUi}}disabled{{/if}}
              data-tooltip="
              <div><strong>DP Cost:</strong> {{ability.cost}}</div>
            "
            />
          </td>
          {{#if (in key "PsychicPoints")}}
            <td></td>
          {{else}}
          <td>
            <input
              class="mod-input-resize-char"
              type="number"
              value="{{ability.bonus}}"
              name="system.abilities.primary.Psychic.{{key}}.bonus"
              {{#if actor.system.lockUi}}disabled{{/if}}
            />
          </td>
          {{/if}}
          <td>
            {{ability.class}}
          </td>
          {{#if (in key "PsychicPoints")}}
            <td>{{ability.final}}</td>
          {{else}}
          <td class="ability-roll clickable" data-category="Psychic" data-ability="{{key}}">
            {{ability.final}}
          </td>
          {{/if}}
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>