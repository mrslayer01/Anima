<h3>Athletics</h3>
<div class="secondary-block">
<table class="ability-table">
  <thead>
    <tr>
      <th class="ability-table-name">Ability</th>
      <th>Base</th>
      <th>Bonus</th>
      <th>Class</th>
      <th>Final</th>
      <th>Passive</th>
    </tr>
  </thead>
  <tbody>
    {{#each actor.system.abilities.Athletics as |ability key|}}
      <tr>
        <td data-tooltip="Kowledge Ability: {{ability.knowledge}}">{{localize (concat "ABF.Ability." key)}}</td>
        <td><input
            class="mod-input-resize-char secondary-input"
            data-name="{{key}}"
            data-cost="{{ability.cost}}"
            type="number"
            value="{{ability.base}}"
            name="system.abilities.Athletics.{{key}}.base"
          /></td>
        <td><input
            class="mod-input-resize-char secondary-input"
            type="number"
            value="{{ability.bonus}}"
            name="system.abilities.Athletics.{{key}}.bonus"
          /></td>
        <td>{{ability.class}}</td>
        <td class="ability-roll clickable" data-category="Athletics" data-ability="{{key}}" data-tooltip="Click to make an Open roll.">{{ability.final}}</td>
        <td class="passive-icon">
          {{#if ability.passive}}
            <i class="fas fa-check"></i>
          {{else}}
            <i class="fas fa-times"></i>
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>