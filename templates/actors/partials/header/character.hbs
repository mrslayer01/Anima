<div class="character-grid">
  <!-- LEFT COLUMN -->
  <div class="character-left">

    <!-- CLASS SECTION -->
    <section class="char-block">
      <h3>Total Level: {{system.level}}</h3>

      <table class="classes-table">
        <thead>
          <tr>
            <th>Class</th>
            <th>Level</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          {{#each system.classes as |cls idx|}}
            <tr>
              <td>{{cls.name}}</td>

              <td>
                <input
                  type="number"
                  class="class-level-input"
                  data-index="{{idx}}"
                  value="{{cls.level}}"
                  min="1"
                />
              </td>

              <td>
                <a class="delete-class" data-index="{{idx}}">
                  <i class="fas fa-trash"></i>
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>

      <button type="button" class="add-class add-class-btn">
        <i class="fas fa-plus"></i>
        Add Class
      </button>
    </section>

    <!-- EXPERIENCE SECTION -->
    <section class="char-block">
      <h3>Experience</h3>

      <div class="xp-bar">
        <div
          class="xp-fill"
          style="width: {{percent system.xp.current system.xp.next}}%;"
        >
        </div>
      </div>

      <div class="xp-labels">
        <input
          type="number"
          name="system.xp.current"
          value="{{system.xp.current}}"
        />
            <input
              type="number"
              value="{{system.xp.next}}"
              disabled
            />
      </div>
    </section>

    <!-- PRESENCE -->
    <div class="lft-block">
      <h3>Presence</h3>
      <table class="lft-table">
        <tr>
          <td>
            <input
              type="number"
              name="system.system.presence.bonus"
              value="{{system.system.presence.bonus}}"
            />
          </td>
          <td>
            <input
              type="number"
              value="{{system.system.presence.final}}"
              disabled
            />
          </td>
        </tr>
      </table>
    </div>

    <!-- DESTINY POINTS -->
    <div class="lft-block">
      <h3>Destiny Points</h3>
      <table class="lft-table">
        <tr>
          <td>
            <input
              type="number"
              name="system.destinyPoints"
              value="{{system.destinyPoints}}"
            />
          </td>
          <td>
            <input
              type="number"
              name="system.maxDestinyPoints"
              value="{{system.maxDestinyPoints}}"
            />
          </td>
        </tr>
      </table>
    </div>

    <!-- ASPECT -->
    <section class="char-block">
      <h3>Aspect</h3>
      <input type="text" name="system.aspect" value="{{system.aspect}}" />
    </section>

  </div>

  <!-- RIGHT COLUMN -->
  <div class="character-right">
    <section class="char-block">
      <h3>Description</h3>
      {{editor
        system.description
        target="system.description"
        button=true
        owner=owner
        editable=editable
      }}
    </section>
  </div>

</div>